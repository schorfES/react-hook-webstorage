{
	"env": {
		"node": true,
		"browser": true,
		"es6": true,
		"jest/globals": true
	},
  "plugins": [
    "react-hooks"
  ],
	"extends": [
		"eslint:recommended",
		"plugin:import/recommended",
    "plugin:react-hooks/recommended"
	],
	"rules": {
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"import/newline-after-import": [
			"error",
			{
				"count": 2
			}
		],
		"import/order": [
			"error",
			{
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": false
				},
				"groups": [
					"builtin",
					"external",
					"parent",
					"sibling",
					"index",
					"object",
					"unknown"
				],
				"newlines-between": "always"
			}
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"quote-props": [
			"error",
			"consistent-as-needed"
		],
		"sort-imports": [
			"error",
			{
				"allowSeparatedGroups": true,
				"ignoreCase": true,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": false
			}
		]
	},
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"extends": [
        "plugin:@typescript-eslint/recommended",
				"plugin:import/typescript"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"project": [
					"./tsconfig.src.json"
				]
			},
			"plugins": [
				"@typescript-eslint"
			]
		},
		{
			"files": [
				"jest.*.ts",
        "*.spec.ts",
        "*.spec.tsx"
			],
			"extends": [
				"plugin:jest/recommended",
				"plugin:jest/style"
			],
			"parserOptions": {
				"project": [
					"./tsconfig.test.jest.json"
				]
			},
			"rules": {
				"@typescript-eslint/ban-ts-comment": "off"
			}
		}
	]
}
